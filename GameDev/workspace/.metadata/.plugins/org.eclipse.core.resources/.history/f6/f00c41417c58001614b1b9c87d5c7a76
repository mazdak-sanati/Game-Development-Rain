package com.thedude.rain.graphics;

public class Screen {
	private int width, height;
	public int[] pixels;

	public Screen(int width, int height) {
		this.width = width;
		this.height = height;
		pixels = new int[width * height]; //pass in through the Game class
	}
	public void clear() { //clear the screen
		for (int = 0; i < pixels.length) {
			pixels[i]=0;
		}
	}
	public void render() {
		for (int y = 0; y < height; y++) { //filling the entire screen through next loop
			for (int x = 0; x < width; x++) {
				pixels[x + y * width] = 0xff00ff; //color in hex increasing pixels 1 by one and changing their color
			}
		}
	}
}
